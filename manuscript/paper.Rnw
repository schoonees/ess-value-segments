## Raking function
source("scripts/myrake.R")

## Make "party" variable with "NoVote" class
NLParty$party.nv <- factor(NLParty$party, levels = c(levels(NLParty$party), "NoVote")) 
NLParty$party.nv[NLParty$vote == 2] <- "NoVote"
NLParty$pspwght <- essparty$pspwght

# Remove "Blank" and "Missing" and recreate party factor
essparty.sub <- essparty[!(essparty$party %in% c("Missing","Blank")), ]
essparty.sub$party <- factor(essparty.sub$party)

# Do raking
esssplit <- split(essparty.sub, essparty.sub$essround)
for (i in seq_along(esssplit)) 
  esssplit[[i]]$party <- factor(esssplit[[i]]$party)
lapply(esssplit, function(x) table(x$party))
electind <- c(1, 2, 3, 3, 4)
wtrake <- vector(length = length(esssplit), mode = "list")
for (i in seq_along(esssplit)) {
  wtrake[[i]] <- myrake(esssplit[[i]]$pspwght, esssplit[[i]]$party, target = na.omit(electab[, electind[i]]), maxit = 50)  
}
rwt <- unsplit(sapply(wtrake, "[[", "w"), essparty.sub$essround)
essparty$reweight <- NA
essparty$reweight[!(essparty$party %in% c("Missing","Blank"))] <- rwt
NLParty$reweight <- essparty$reweight

## Nonresponse rates
library(plyr)
nonrates <- ddply(.data = essparty, .variables = "essround",
                  .fun = function(x) sum(x$pspwght[x$party == "Missing"]) / sum(x$pspwght))$V1
ovl.nonrate <- sum(essparty$pspwght[essparty$party == "Missing"]) / sum(essparty$pspwght)

## Do SEPARATE recalibration on "NoVote"
rwt.tots <- tapply(NLParty$reweight, NLParty$ESSRound, sum, na.rm = TRUE)
psptots.novote <- tapply(NLParty$pspwght[NLParty$party.nv == "NoVote"], NLParty$ESSRound[NLParty$party.nv == "NoVote"], sum)
pop.turnout <- c(9515226/12035935, 9666602/12076711, 9666602/12076711, 9854998/12264503, 9442977/12524152)
novote.factors <- (1 - pop.turnout) / pop.turnout * rwt.tots / psptots.novote

## Add recalibrated NoVote weights to reweight
NLParty$reweight.nv <- NLParty$reweight
NLParty$reweight.nv[NLParty$party.nv == "NoVote"] <- 
  NLParty$pspwght[NLParty$party.nv == "NoVote"] * 
  novote.factors[NLParty$ESSRound[NLParty$party.nv == "NoVote"]]

## Check that it is correct
tapply(NLParty$reweight.nv[NLParty$party.nv == "NoVote"], NLParty$ESSRound[NLParty$party.nv == "NoVote"], sum, na.rm = TRUE) / tapply(NLParty$reweight.nv, NLParty$ESSRound, sum, na.rm = TRUE)

## Check that proportion of votes are still correct
tmp.tots <- ddply(.data = NLParty[NLParty$party.nv != "NoVote", ], .variables = "ESSRound", .fun = function(x) sum(x$reweight.nv, na.rm = TRUE))[, 2]
ddply(.data = NLParty[NLParty$party.nv != "NoVote", ], .variables = c("ESSRound", "party"), .fun = function(x) sum(x$reweight.nv, na.rm = TRUE) / tmp.tots[unique(x$ESSRound)])

